<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".desert.DesertActivity"
    android:background="@drawable/desert">

    <Button
        android:id="@+id/btn_backpack"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style01"
        android:alpha="0.7"
        android:textColor="@color/black"
        android:text="背包"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_content_desert"
        app:layout_constraintBottom_toTopOf="@id/tv_content_desert" />
    <TextView
        android:id="@+id/tv_content_desert"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="20dp"
        android:background="@drawable/shape_content_white"
        android:alpha="0.5"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"/>

    <ImageView
        android:id="@+id/imgv_box"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/box"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.15"
        />
    <ImageView
        android:id="@+id/imgv_girl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_female"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        />
    <ImageView
        android:id="@+id/imgv_boy"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_person_on_knees"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.8"
        />
    <Button
        android:id="@+id/btn_movement"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style01"
        android:alpha="0.7"
        android:textColor="@color/black"
        android:text="movement:0"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content_desert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/imgv_zombies_army"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/zombies_army"
        android:scaleType="fitXY"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="60sp"
        android:text="30"
        android:fontFamily="monospace"
        android:visibility="invisible"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />
    <FrameLayout
        android:id="@+id/layout_you_lost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you lost"
            android:textSize="70sp"
            android:textColor="@color/red"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全 員 撕 卡"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"/>
    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>