<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room.GarageActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/btn_back_garage"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style02"
        android:textColor="@color/mainColor"
        android:text="返回"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgv_background_garage"
        app:layout_constraintBottom_toTopOf="@id/imgv_background_garage" />
    <Button
        android:id="@+id/btn_backpack_garage"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style02"
        android:textColor="@color/mainColor"
        android:text="背包"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imgv_background_garage"
        app:layout_constraintBottom_toTopOf="@id/imgv_background_garage" />
    <ImageView
        android:id="@+id/imgv_background_garage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/shape_content"
        android:src="@drawable/bg_garage"
        android:padding="15dp"
        android:scaleType="fitXY"

        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.12"/>
    <ImageView
        android:id="@+id/imgv_chevrlet"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:src="@drawable/chevrolet"

        app:layout_constraintStart_toStartOf="@id/imgv_background_garage"
        app:layout_constraintEnd_toEndOf="@id/imgv_background_garage"
        app:layout_constraintTop_toTopOf="@id/imgv_background_garage"
        app:layout_constraintBottom_toBottomOf="@id/imgv_background_garage"/>
    <ImageView
        android:id="@+id/imgv_gas_42"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/galllons_42"

        android:layout_marginEnd="25dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintEnd_toEndOf="@id/imgv_background_garage"
        app:layout_constraintBottom_toBottomOf="@id/imgv_background_garage"/>

        <TextView
            android:id="@+id/tv_content_store_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "@string/str_garage"
            android:textColor="@color/mainColor"
            android:textSize="18sp"
            android:background="@drawable/shape_content"

            android:layout_margin="15dp"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgv_background_garage"
            />


</androidx.constraintlayout.widget.ConstraintLayout>