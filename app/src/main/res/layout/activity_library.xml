<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room.LibraryActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/btn_back_library"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style02"
        android:textColor="@color/mainColor"
        android:text="返回"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgv_background"
        app:layout_constraintBottom_toTopOf="@id/imgv_background" />
    <Button
        android:id="@+id/btn_backpack_library"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style02"
        android:textColor="@color/mainColor"
        android:text="背包"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imgv_background"
        app:layout_constraintBottom_toTopOf="@id/imgv_background" />
    <ImageView
        android:id="@+id/imgv_background"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/shape_content"
        android:src="@drawable/bg_library"
        android:padding="15dp"

        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.12"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview_content_room"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_content"

        android:layout_margin="15dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_background">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text= "@string/str_library"
            android:textColor="@color/mainColor"
            android:textSize="18sp"
            />
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>