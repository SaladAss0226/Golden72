<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room.MapActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/btn_back_map"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style02"
        android:textColor="@color/mainColor"
        android:text="返回"

        app:layout_constraintStart_toStartOf="@id/layout_fragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_fragment" />

    <Button
        android:id="@+id/btn_location"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style02"
        android:gravity="center"
        android:text="查詢地點"
        android:textColor="@color/mainColor"

        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/layout_fragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layout_fragment"
        app:layout_constraintStart_toEndOf="@id/btn_back_map"/>

    <FrameLayout
    android:id="@+id/layout_fragment"
    android:layout_width="350dp"
    android:layout_height="630dp"
    android:background="@drawable/shape_content_white_no_radius"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.7">

<fragment
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>