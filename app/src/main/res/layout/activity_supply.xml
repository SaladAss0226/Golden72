<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onTheWay.SupplyActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/btn_backpack_supply"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style02"
        android:textColor="@color/mainColor"
        android:text="背包"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgv_background_supply"
        app:layout_constraintBottom_toTopOf="@id/imgv_background_supply" />

    <ImageView
        android:id="@+id/imgv_background_supply"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/shape_content"
        android:src="@drawable/bg_supply"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:layout_margin="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.12"/>

    <TextView
        android:id="@+id/tv_content_supply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mainColor"
        android:textSize="18sp"
        android:background="@drawable/shape_content"

        android:layout_margin="15dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_background_supply"
        />
    <Button
        android:id="@+id/btn_take_it_supply"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style02"
        android:textSize="14sp"
        android:text="放入背包"
        android:textColor="@color/mainColor"

        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_content_supply"
        app:layout_constraintBottom_toBottomOf="@id/tv_content_supply"
        app:layout_constraintEnd_toEndOf="@id/tv_content_supply"/>

        <ImageView
            android:id="@+id/imgv_eagal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/eagal"

            android:layout_margin="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content_supply"/>
    <ImageView
        android:id="@+id/imgv_m9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:src="@drawable/ic_m9"

        android:layout_margin="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_eagal"/>
    <ImageView
        android:id="@+id/imgv_m9_02"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:src="@drawable/ic_m9"

        android:layout_margin="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_m9"/>
    <ImageView
        android:id="@+id/imgv_ak47"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:src="@drawable/ak_47"

        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content_supply"/>
    <ImageView
        android:id="@+id/imgv_ak47_02"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:src="@drawable/ak_47"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_ak47"/>
    <ImageView
        android:id="@+id/imgv_c4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:src="@drawable/c4"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_ak47_02"/>
    <ImageView
        android:id="@+id/imgv_gas"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:src="@drawable/gallons_5"

        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content_supply"/>
    <ImageView
        android:id="@+id/imgv_gas_02"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:src="@drawable/gallons_5"

        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_gas"/>
    <ImageView
        android:id="@+id/imgv_gas_03"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:src="@drawable/gallons_5"

        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_gas_02"/>
    <ImageView
        android:id="@+id/imgv_gas_04"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:src="@drawable/gallons_5"

        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgv_gas_03"/>

    <TextView
        android:id="@+id/tv_next_supply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Next"
        android:textColor="@color/white"

        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
    <ImageView
        android:id="@+id/imgv_arrow_forward"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_arrow_right"

        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_next_supply"
        app:layout_constraintBottom_toBottomOf="@id/tv_next_supply"
        />

</androidx.constraintlayout.widget.ConstraintLayout>