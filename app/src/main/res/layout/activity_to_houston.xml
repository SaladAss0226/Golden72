<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onTheWay.ToHoustonActivity"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_third_to_Houston"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imgv_background02_on_the_way"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/shape_content"
            android:src="@drawable/city_disaster02"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:layout_margin="15dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_second_to_Houston"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imgv_background01_on_the_way"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/shape_content"
            android:src="@drawable/city_disaster01"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:layout_margin="15dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.12"/>

        <Button
            android:id="@+id/btn_supply_station_to_houston"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style02"
            android:text="補給站"
            android:textColor="@color/mainColor"
            android:textSize="18sp"

            app:layout_constraintTop_toBottomOf="@id/imgv_background01_on_the_way"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2"/>
        <Button
            android:id="@+id/btn_contact_station_to_houston"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style02"
            android:text="通訊站"
            android:textColor="@color/mainColor"
            android:textSize="18sp"

            app:layout_constraintTop_toBottomOf="@id/imgv_background01_on_the_way"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_first_to_Houston"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
    </androidx.constraintlayout.widget.ConstraintLayout>




    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Next"
        android:textColor="@color/white"

        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
    <ImageView
        android:id="@+id/imgv_arrow_forward"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_arrow_right"

        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_next"
        app:layout_constraintBottom_toBottomOf="@id/tv_next"
        />



</androidx.constraintlayout.widget.ConstraintLayout>